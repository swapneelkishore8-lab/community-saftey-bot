{
  "buildCommand": "echo 'Static deployment - no build needed'",
  "outputDirectory": ".",
  "framework": "static",
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000" }
    },
    {
      "src": "/templates/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000" }
    },
    {
      "src": "/(.*\\.(gif|png|jpg|jpeg|svg|css|js|ico))$",
      "headers": { "Cache-Control": "public, max-age=31536000" }
    },
    {
      "src": "/",
      "dest": "/api/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.html"
    }
  ]
}
